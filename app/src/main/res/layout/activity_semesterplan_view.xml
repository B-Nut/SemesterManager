<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_semesterplan_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.hsmw.semestermanager.SemesterplanView">

    <ScrollView
        android:id="@+id/semesterview_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/semesterview_modulueberschrift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Module"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <View
                android:id="@+id/strich1"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginTop="10dp"
                android:foreground="@android:color/black"
                android:orientation="vertical"
                android:textStyle="bold"
                android:visibility="visible" />

            <ListView
                android:id="@+id/list_semesterview_module"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <View
                android:id="@+id/strich2"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="10dp"
                android:foreground="@android:color/black"
                android:orientation="vertical"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/semesterview_terminueberschrift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Termine"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <View
                android:id="@+id/strich3"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="10dp"
                android:foreground="@android:color/black"
                android:orientation="vertical"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/list_semesterview_termine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
